# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Configuration (required for Firestore)
# Option 1: Service Account JSON (recommended for production)
# Copy your Firebase service account JSON and paste it as a single line
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Option 2: For local development with Firebase CLI
# If you have Firebase CLI installed and authenticated, you can leave this empty
# and use Application Default Credentials instead

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# CORS Configuration (for development)
FRONTEND_URL=http://localhost:3000